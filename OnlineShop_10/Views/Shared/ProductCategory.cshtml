@model List<Model.EF.ProductCategory>

<!-- product left -->
<div class="side-bar col-md-3">
    <div class="search-hotel">
        <h3 class="agileits-sear-head">Search Here..</h3>
        <form action="#" method="post">
            <input type="search" placeholder="Product name..." name="search" required="">
            <input type="submit" value=" ">
        </form>
    </div>
    <!-- price range -->
    <div class="range">
        <h3 class="agileits-sear-head">Price range</h3>
        <ul class="dropdown-menu6">
            <li>

                <div id="slider-range"></div>
                <input type="text" id="amount" style="border: 0; color: #ffffff; font-weight: normal;" />
            </li>
        </ul>
    </div>
    <!-- //price range -->
    <!--preference -->

    <div class="left-side">
        <h3 class="agileits-sear-head">Mẫu theo dịp</h3>
        <ul>
            @foreach (var item in Model)
            {
                <li>
                    <input type="checkbox" class="checked" id="checkbox-@item.ID" data-meta-title="@item.MetaTitle" data-id="@item.ID">
                    <label class="span" for="checkbox-@item.ID">
                        @item.Name
                    </label>
                </li>
                @*<li><a href="/san-pham/@item.MetaTitle-@item.ID">@item.Name</a></li>*@
            }


        </ul>
    </div>

    <!-- jQuery Script -->
    <script>
        $(document).ready(function () {
            //alert(123)
            $(".checked").on("change", function () {
                if ($(this).is(":checked")) {
                    var metaTitle = $(this).data("meta-title");
                    var id = $(this).data("id");
                    window.location.href = "/san-pham/" + metaTitle + "-" + id;
                }
            });
        });
    </script>

    <!-- // preference -->
    <!-- discounts -->
    <div class="left-side">
        <h3 class="agileits-sear-head">Discount</h3>
        @foreach(var item in Model.Where(x=>x.ParentID == null))
        {
            var child = Model.Where(x => x.ParentID == item.ID);
            var parentClass = child.Count() > 0 ? "class=dropdown-toggle data-toggle=dropdown":"";

                <li class="dropdown">
                    <a href="/san-pham/@item.MetaTitle-@item.ID" @parentClass >@item.Name</a>
                    @if (child.Count() > 0)
                    {
                        <ul class="dropdown-menu">
                            @foreach(var chilItem in child)
                            {
                              <li><a href="/san-pham/@chilItem.MetaTitle-@chilItem.ID">@chilItem.Name</a></li>
                            }
                            
                        </ul>
                    }
                </li>
            }
